<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evolet.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/download"
        android:label="EZcare"
        android:roundIcon="@drawable/download"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CredentialActivities.RegisterUser"></activity>
        <activity android:name=".CredentialActivities.Registration" />
        <activity android:name=".CredentialActivities.ForgotPassword" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="Ezcare"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.InvoiceActivity"
            android:label="@string/title_activity_invoice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.ItemActivity" />
        <!--
        <activity
            android:name=".Activities.NotificationActivity"
            android:label="@string/title_activity_admin_"
            android:theme="@style/AppTheme.NoActionBar"/>
        -->
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivity" />
        <activity
            android:name=".Activities.UserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CredentialActivities.UserLoginActivity" />
        <activity
            android:name=".Activities.AdminActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CredentialActivities.AdminLoginActivity" />
        <activity android:name=".Activities.AddProduct" />
        <activity
            android:name=".Activities.AddressActivity"
            android:label="Address " />
        <activity
            android:name=".Activities.HomeActivity"
            android:label="@string/title_activity_home" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activities.BillingActivity" />
        <activity
            android:name=".Activities.NotificationActivity"
            android:label="Your Order" />
    </application>

</manifest>